<div class="column w-100">
  <div class="d-flex justify-content-center mb-3">
    <div class="manager-details p-2" style="width: 50%; background-color: #69B578; border-radius: 5px">
      <h1 style="text-align: center"><%= @manager.entry_name %></h1>
      <h3 style="text-align: center"><%= @manager.player_name %>, <%= @manager.discord_name %></h3>
      <div class="scores row" style="text-align: center">
        <p><strong>Points post-deductions:</strong></p>
        <p><%= @manager.total_after_deductions %></p>
      </div>
    </div>
  </div>

  <%# <ul>
  <% @players.each do |player| %>
    <%# <li><%= player[0].web_name, <%= player[0].selected_by_percent</li> %>
  <%# <% end %>
  <%# </ul> %>

  <div class="row d-flex justify-content-center">
    <div class="column col-3">
      <h4>Gameweek <%= @gameweek %> picks</h4>
      <ul>
      <% Pick.where(fplteam: @manager, gameweek: @gameweek).each do |pick| %>
        <%= render 'player', pick: pick %>
      <% end %>
      </ul>
    </div>
    <div class="column col-3">
      <h4>Past penalties</h4>
      <% penalties = Penalty.where(fplteam: @manager, status: "confirmed").order(gameweek: :desc) %>
      <% penalties.each do |penalty| %>
        <li>Gameweek <%= penalty.gameweek %>, <%= penalty.player.web_name %>, <%= penalty.points_deducted %> points</li>
      <% end %>
    </div>
  </div>
</div>
