<div class="column" id="penalties">
  <h1 style="text-align: center">All penalties</h1>
  <div class="text-center">
    <%= link_to "Add a new penalty", new_penalty_path, class: "btn btn-primary" %>
  </div>
  <hr>
  <ul>
  <% @penalties.each do |penalty| %>
    <li style="margin-top: 10px"><strong><%= penalty.fplteam.player_name %> (<%= penalty.fplteam.discord_name %>)<%= link_to "(Edit)", edit_penalty_path(penalty) %></strong></li>
    <ul>
      <li><%= penalty.player.web_name %></li>
      <li>Gameweek <%= penalty.gameweek %></li>
      <li><%= penalty.points_deducted %> points deducted</li>
    </ul>
  <% end %>
  </ul>
</div>
